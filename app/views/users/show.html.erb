<div class="user-top center">
  <div class="usertop-left">
    <div id="usershow-card"class=" card shadow" >
      <div class="card-img-top">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar.variant(combine_options:{resize:"318x244^",crop:"318x244+0+0",gravity: :center}).processed %>
        <% else %>
          <%= image_tag ("no_image.png"), class:"avatar" %>
        <% end %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= @user.name%></h5>
        <%= render 'relationships/influence_button', user: @user %>
      </div>
    </div>
  </div>
  <div class="usertop-right">
    <h5 id="user-tr-h5" class=" border-dark border-bottom"><span id="influence"><%= @count_influencers %></span>　インフルエンス</h5>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-2 offset-md-1">
    <strong><i class="fas fa-user-circle"></i>　プロフィール：</strong>
    <p class="ml-4 mt-3"><button class="btn btn-success btn-sm"><%= link_to 'ユーザー編集', edit_user_path(@user), class: "user-link" %></button></p>
    <p class="ml-4 mt-3"><button class="btn btn-success btn-sm"><%= link_to 'ユーザーリスト', users_path, class: "user-link" %></button></p>
  </div>
  <div class="col-md-8">
    <div class="card ml-3">
        <div class="card-body">
        　　<%= simple_format(@user.profile) %>
        </div>
    </div>
  </div>
</div>
<div class="row mt-4">　
  <div class="col-md-2 offset-md-1">
    <strong><i class="fas fa-running"></i>　　挑戦中：</strong>
     <p class="ml-2 mt-3"><button class="btn btn-success btn-sm"><%= link_to '新しい挑戦を追加する', new_challenge_path,class: "user-link" %></button></p>
  </div>
  <div class="col-md-8">
    <%= render 'challenges/challenges', challenges: @challenges %>
  </div>
</div>
<footer class="last-foot">
  <div class="row">
    <div class="last-left col-md-5">
         <p><i class="fas fa-plane"></i></p>
