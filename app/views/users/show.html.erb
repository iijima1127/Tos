<div class="user-top center">
  <div class="usertop-left">
    <div id="usershow-card"class=" card shadow" >
      <div class="card-img-top">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar.variant(resize:'360x260').processed %>
        <% else %>
          <%= image_tag ("no_image.png"),class:"avatar" %>
        <% end %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= @user.name%></h5>
      </div>
    </div>
  </div>
