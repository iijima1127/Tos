<div class="text-center mt-5">
  <h1>ユーザー編集</h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @user, local: true) do |f| %>
      
      <div class="form-group">
        <%= f.label :name, 'ユーザー名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'Eメール' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :profile, 'プロフィール' %>
        <%= f.text_area :profile, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :avatar, "プロフィール写真" %>
        <%= f.file_field :avatar, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード（確認用）' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <%= f.submit '登録', class: 'btn btn-success btn-block' %>
    <% end %>
    
    <%= link_to 'プロフィールトップへ', user_path(@user) %>
  </div>
</div>
<footer class="last-foot mt-5">
  <div class="text-center mt-3">    
    <a class="ml-3 text-black-50"  href="/protocol">利用規約</a>
    <a class="ml-2 text-black-50" href="/privacy">プライバシポリシー</a>
  </div>
  <div class="row mt-2">
    <div class="col-lg-8 col-md-10 mx-auto">
      <ul class="list-inline text-center">
        <li class="list-inline-item">
          <a href="#" class="foot-icon">
            <span class="fa-stack fa-lg">
              <i class="fas fa-circle fa-stack-2x"></i>
              <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
            </span>
          </a>
        </li>
        <li class="list-inline-item">
          <a href="#" class="foot-icon">
            <span class="fa-stack fa-lg">
              <i class="fas fa-circle fa-stack-2x"></i>
              <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
            </span>
          </a>
        </li>
        <li class="list-inline-item">
