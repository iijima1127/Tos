<div class="text-center mt-5">
  <h1>挑戦したいことを探す</h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <div class="search_form">
      <%= render 'challenges/search_form' %>
    </div>
  </div>
  <div class="col-sm-6 offset-sm-3">
    <ul class="list-unstyled">
      <% @challenges.each do |challenge|%>
        <li>
          <div class="card mt-3">
            <div class="card-header">
              <span class="text-muted">挑戦スタート &#058; <%= challenge.created_at.to_s(:datetime_jp) %></span>
            </div>
            <div class="card-body">
              <p class="font-weight-bold">目標 &#058;<%= challenge.goal %></p>
              <p class="font-weight-bold">挑戦内容 &#058; <%= challenge.challenge %></p>
              <div class="userbutton-container">
                <p class="ml-2"><button class="btn btn-light btn-sm"><%= link_to "エピソードを見る", challenge_path(challenge), class: "link" %></button></p>
                <p class="ml-2"><button class="btn btn-light btn-sm"><%= link_to "プロフィールへ", user_path(challenge.user), class: "link" %></button></p>
                <% if current_user == challenge.user %>
                  <p class="ml-2"><button class="btn btn-light btn-sm"><%= link_to "挑戦の更新", edit_challenge_path(challenge), class: "link" %></button></p>
                  <p class="ml-2"><%= link_to "この挑戦を諦める", challenge, method: :delete, data: { confirm: "エピソードも消えてしまいます。本当によろしいですか？" }, class: 'btn btn-danger btn-sm' %></p>
                <% end %>
              </div>
            </div>
          </div>
        </li>
     <% end %>
    </ul>
    <div class="py-3">
      <%= paginate @challenges %>
    </div>
  </div>
</div>
<footer class="last-foot ">
  <div class="text-center mt-3">    
    <a class="ml-3 text-black-50"  href="/protocol">利用規約</a>
    <a class="ml-2 text-black-50" href="/privacy">プライバシポリシー</a>
  </div>
  <div class="row mt-2">
    <div class="col-lg-8 col-md-10 mx-auto">
      <ul class="list-inline text-center">
        <li class="list-inline-item">
          <a href="#" class="foot-icon">
            <span class="fa-stack fa-lg">
              <i class="fas fa-circle fa-stack-2x"></i>
              <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
            </span>
          </a>
        </li>
        <li class="list-inline-item">
          <a href="#" class="foot-icon">
            <span class="fa-stack fa-lg">
              <i class="fas fa-circle fa-stack-2x"></i>
              <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
            </span>
          </a>
        </li>
        <li class="list-inline-item">
          <a href="#" class="foot-icon">
            <span class="fa-stack fa-lg">
              <i class="fas fa-circle fa-stack-2x"></i>
              <i class="fab fa-github fa-stack-1x fa-inverse"></i>
            </span>
          </a>
        </li>
      </ul>
      <p class="copyright text-center">Copyright &copy; 2020 easyma, inc All rights reserved.</p>
    </div>
  </div>
</footer>
