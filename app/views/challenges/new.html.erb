<div class="text-center mt-5">
  <h1>新しい挑戦を追加</h1>
</div>
<div class="row no-gutters">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @challenge, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :goal, '目標' %>
          <%= f.text_field :goal, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :challenge, '挑戦内容' %>
          <%= f.text_area :challenge, class: 'form-control' %>
        </div>
        <%= f.submit '新しい挑戦を追加', class: 'btn btn-success btn-block' %>
    <% end %>
  </div>
</div>
<%= render 'layouts/wpfooter' %>