<div class="text-center">
  <h1>挑戦内容の更新</h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @challenge, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :goal, '目標' %>
          <%= f.text_field :goal, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :challenge, '挑戦内容' %>
          <%= f.text_area :challenge, class: 'form-control' %>
        </div>
        <%= f.submit '挑戦内容を更新', class: 'btn btn-success btn-block' %>
    <% end %>
  </div>
</div>